<%- include("./../partials/header") %>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">


    <div class="containerr">

        <div class="top-section">
        <div class="author-section" >
                <img src="<%= article.profileImg %>" class="author-image">
        </div>
          <div class="date-section" style="margin-left:30px;">
            <h3 class="article-title"><span style="text-transform: capitalize;"><%= article.title %></span>
            <br><span style="color:grey;">by </span><strong style="color:blue;font-size:1.5rem;"><%= article.author %></strong> 
            <span style="color:green;font-size:1.2rem;"><%= article.createdAt.toLocaleString() %></span></h3>
        </div>
    </div>
    <!-- edit section -->
    <div class="control-buttons " style="margin-top: 20px;padding-left: 74px;">
        <a href="/" class="btn btn-secondary ">All Articles</a>
    <a href="/articles/edit/<%= article.id %>" class="btn btn-info">Edit</a>
    <form action="/articles/<%= article.id %>?_method=DELETE"  method="POST">
        <input type="submit" class="btn btn-danger mt-2 mb-4" value="DELETE">
    </form>
    </div>
        
   

        <div class="image">
            <img src="<%= article.image %>" class="blog-img"/>
        </div>
       
        <div class="blog-desc" >
            <p class="display-6"><%= article.Fulldescription %></p>
        </div>
    </div>

    <!-- comment section -->
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h4 class="border-bottom pb-2">Comments</h4>
            </div>
            <div class="col-md-12">
                    <div class="form-group">
                        <input type="hidden" value="<%= article.id %>"  id="postId" />
                        <input type="hidden" value="<%= user.username %>"  id="userName" />
                        
                        <label for="">Write a comment</label>
                        <textarea class="form-control" id="textarea" rows="3"></textarea>
                    </div>
            </div>
            <div class="col-md-12 mt-1">
                <button id="submitBtn" class="btn btn-primary float-end">Post comment</button>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-12">
                <div class="typing text-success" style="color:#09c76f"></div>
                <ul class="comment_box">
                   <!-- data come from script.js -->
                </ul>
            </div>
        </div>
    </div>
 




    <script src="/socket.io/socket.io.js"></script>
    <script src="./../../script.js"></script>
    <!-- <script src="/js/app.js"></script> -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>

    <%- include("./../partials/footer") %>


    
    
